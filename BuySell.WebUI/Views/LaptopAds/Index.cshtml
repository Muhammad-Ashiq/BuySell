@model IEnumerable<BuySell.WebUI.Models.LaptopAdViewModel>

@{
    ViewBag.Title = "Laptop Ads";
}

<h2>Laptop Ads</h2>
<hr />
<div class="row">
    @Html.Partial("_CategoriesPartial")
    <div class="col-md-9">

        <div class="row">
            @if (!Model.Any())
            {
                <p>No Laptop Ads found. We are sorry.</p>
            }
            else
            {
                <div class="row carousel-holder">

                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                @{
                                    var ModelList = Model.Take(3).ToList();
                                    for (int i = 0; i < 3; i++)
                                    {
                                        if (i == 0)
                                        {
                                        <div class="item active">
                                            <a href="@Url.Action("Details", "LaptopAds", new { id = @ModelList[i].ID })">
                                                <img class="slide-image" src="~/images/@ModelList[i].Images.First().Path" alt="">
                                            </a>
                                        </div>
                                        }
                                        else
                                        {
                                        <div class="item">
                                            <a href="@Url.Action("Details", "LaptopAds", new { id = @ModelList[i].ID })">
                                                <img class="slide-image" src="~/images/@ModelList[i].Images.First().Path" alt="">
                                            </a>
                                        </div>
                                        }
                                    }
                                 }
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>

                foreach (var item in Model)
                {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="~/images/@item.Images.First().Path" alt="">
                    <div class="caption">
                        <h4>
                            @Html.ActionLink(item.Title, "Details", new { id = item.ID })
                        </h4>
                        <p>@Html.DisplayFor(modelItem => item.AccessoryBrand.Name), @Html.DisplayFor(modelItem => item.Ram) Ram, @Html.DisplayFor(modelItem => item.Processor) Processor, @Html.DisplayFor(modelItem => item.HardDisk) Hard Disk Size, @Html.DisplayFor(modelItem => item.Condition.ConditionType) Condition. @Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">@Html.DisplayFor(modelItem => item.Currency.ISOCode) @Html.DisplayFor(modelItem => item.Price)</p>
                        <p>
                            @Html.DisplayFor(modelItem => item.City.Name)
                        </p>
                    </div>
                </div>
            </div>
                }
            }
        </div>

    </div>
</div>