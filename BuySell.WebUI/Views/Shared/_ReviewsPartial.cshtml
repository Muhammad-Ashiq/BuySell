@{
    var ReviewsList = Model.Reviews;

    if (ReviewsList.Count != 0)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reviews</h3>
            </div>
            <div class="panel-body">
                <div class="col-md-12 well">
                    @foreach (var Review in Model.Reviews)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <span class="glyphicon glyphicon-user"></span> <b>@Html.ActionLink(Review.Seller.Name, "Details", "Profile", new { area = "", id = 1 }, new { target = "_blank" }) @Review.Seller.Name @Html.ActionLink(Review.Seller.Name, "Details", "LaptopAds", new { id = Review.Seller.ID }, null)</b> (@Review.Seller.Username)
                                <span class="pull-right">Timestamp: <b>@Review.PostingTime</b></span>
                                <br />
                                <p>@Review.Content</p>
                            </div>
                        </div>
                        <hr>
                    }
                 </div>
            </div>
        </div>
    }
}