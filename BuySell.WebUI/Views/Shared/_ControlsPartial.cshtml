@if (Request.IsAuthenticated)
{
    if (@Model.Seller.Username == User.Identity.GetUserName())
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Control Your Ad</h3>
            </div>
            <div class="panel-body">
                <div class="form-actions no-color">
                    @using (Html.BeginForm("Edit", "LaptopAds", new { Id = @Model.ID }, FormMethod.Get))
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" name="action" value="Edit" class="btn btn-warning" />
                    }
                    @using (Html.BeginForm("Delete", "LaptopAds", new { Id = @Model.ID }, FormMethod.Get))
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" name="action" value="Delete" class="btn btn-danger" />
                    }
                </div>
             </div>
         </div>
    }
}
